 {% extends 'ft_base/backend.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block container %}
    <div class="right_col" role="main">
        <div class="">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Solicitações de veículos</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table id="table_veiculo_autorizar" class="table table-striped ">
                                <tbody>
                                    <tr>
                                        <td>Empresa</td>
                                        <td>{{ veiculo.empresa.nome }}</td>
                                    </tr>

                                    <tr>
                                        <td>Veiculo</td>
                                        <td>{{ veiculo.descricao }}</td>
                                    </tr>

                                    <tr>
                                        <td>Placa</td>
                                        <td>{{ veiculo.placa }}</td>
                                    </tr>

                                    <tr>
                                        <td>Modelo</td>
                                        <td>{{ veiculo.modelo }}</td>
                                    </tr>

                                    <tr>
                                        <td>Fabricante</td>
                                        <td>{{ veiculo.fabricante}}</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-9">
                                <button id="autorizar" data-id-veiculo="{{ veiculo.id }}" type="submit" class="btn btn-success">Autorizar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ app.asset_path }}/js/veiculo_autorizacao/veiculo-autorizacao-modulo.js" type="text/javascript"></script>
    <script src="{{ app.asset_path }}/js/veiculo_autorizacao/veiculo-autorizacao.js" type="text/javascript"></script>
{% endblock %}


