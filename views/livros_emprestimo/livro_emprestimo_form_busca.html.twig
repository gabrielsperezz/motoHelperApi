{% extends 'ft_base/backend.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block container %}
    <div class="right_col" role="main">
        <div class="">
            <di v class="page-title">
                <div class="title_left">
                    <h3>Livros Emprestados</h3>
                </div>

                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Digite o que você deseja">
                            <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Buscar!</button>
                    </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Lista de livros emprestados</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <a href="{{ app.url_generator.generate('form_livro_emprestimo') }}"
                                   class="btn btn-round btn-primary">
                                    <i class="fa fa-plus"></i>
                                    Novo
                                </a>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table id="table_livros" class="table table-striped ">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Livro</th>
                                    <th>Editora</th>
                                    <th>Nome aluno</th>
                                    <th>Email aluno</th>
                                    <th>Data emprestimo</th>
                                    <th>Data devolução</th>
                                    <th>Entregue</th>
                                    <th>Ações</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for livro in livros %}
                                    <tr>
                                        <td>{{ livro.id }}</td>
                                        <td>{{ livro.livro.titulo }}</td>
                                        <td>{{ livro.livro.editora }}</td>
                                        <td>{{ livro.login.descricao }}</td>
                                        <td>{{ livro.login.email }}</td>
                                        <td>{{ livro.data_emprestimo }}</td>
                                        <td>{{ livro.data_devolucao }}</td>
                                        <td>
                                            {% if  livro.entregue == 1 %}
                                                <i class="fa fa-check"></i>
                                            {% else %}
                                                <i class="fa fa-close"></i>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <i data-id-livro="{{ livro.id }}"
                                               class="btn btn-sm btn-success fa fa-pencil entregar"> Devolvido</i>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ app.asset_path }}/js/livros_emprestimo/livro-emprestimo-modulo.js" type="text/javascript"></script>
    <script src="{{ app.asset_path }}/js/livros_emprestimo/livro_emprestimo_busca.js" type="text/javascript"></script>

{% endblock %}


