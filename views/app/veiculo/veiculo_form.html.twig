{% extends 'app/ft_base/backend.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block container %}
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Veiculos</h3>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Cadastro de veiculos</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <form id="form_veiculo" class="form-horizontal form-label-left" novalidate>
                                <span class="section">Dados básicos</span>
                                <input type="hidden" id="id_veiculo" name="id_veiculo" value="{{ veiculo.id|default('0')}}">

                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="titulo">Descrição</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="vei_descricao" class="form-control col-md-7 col-xs-12" value="{{ veiculo.descricao|default('') }}" name="vei_descricao" placeholder="Descrição" required="required" type="text">
                                    </div>
                                </div>

                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="titulo">Placa</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="vei_placa" class="form-control col-md-7 col-xs-12" value="{{ veiculo.placa|default('') }}" name="vei_placa" placeholder="Placa" required="required" type="text">
                                    </div>
                                </div>

                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="titulo">Fabricante</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="vei_fabricante" class="form-control col-md-7 col-xs-12" value="{{ veiculo.fabricante|default('') }}" name="vei_fabricante" placeholder="Fabricante" required="required" type="text">
                                    </div>
                                </div>

                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="titulo">Modelo</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="vei_modelo" class="form-control col-md-7 col-xs-12" value="{{ veiculo.modelo|default('') }}" name="vei_modelo" placeholder="Modelo" required="required" type="text">
                                    </div>
                                </div>

                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="titulo">Cor</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select id="vei_cor" name="vei_cor" class="form-control">
                                            {% for cor in cores %}
                                            <option value="{{ cor.id }}" {% if cor.id == ((veiculo.cor|default(0))) %}selected="selected"{% endif%}> {{ cor.descricao }} </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>

                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-md-offset-3">
                                        <button id="salvar" type="submit" class="btn btn-success">Salvar</button>
                                        <button id="cancelar" class="btn btn-primary">Cancelar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ app.asset_path }}/js/veiculos/veiculo-modulo.js" type="text/javascript"></script>
    <script src="{{ app.asset_path }}/js/veiculos/veiculo-view.js" type="text/javascript"></script>
    <script src="{{ app.asset_path }}/js/veiculos/veiculo.js" type="text/javascript"></script>

{% endblock %}


