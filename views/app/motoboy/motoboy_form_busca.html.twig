{% extends 'app/ft_base/backend.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block container %}
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Motoboys</h3>
                </div>

                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Digite o que você deseja">
                            <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Buscar!</button>
                    </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Lista de motoboys cadastrados</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <a href="{{ app.url_generator.generate('form_motoboy') }}"
                                   class="btn btn-round btn-primary">
                                    <i class="fa fa-plus"></i>
                                    Novo
                                </a>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table id="table_motoboys" class="table table-striped table-responsive">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nome</th>
                                    <th>Login</th>
                                    <th>Email</th>
                                    <th>Ações</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for motoboy in motoboys %}
                                    <tr>
                                        <td>{{ motoboy.id }}</td>
                                        <td>{{ motoboy.nome }}</td>
                                        <td>{{ motoboy.login }}</td>
                                        <td>{{ motoboy.email }}</td>
                                        <td>
                                            <i data-id-motoboy="{{ motoboy.id }}"
                                               class="btn btn-sm btn-success fa fa-pencil editar"></i>
                                            <i data-id-motoboy="{{ motoboy.id }}"
                                               class="btn btn-danger btn-sm fa fa-remove remover"></i>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ app.asset_path }}/js/motoboys/motoboy-modulo.js" type="text/javascript"></script>
    <script src="{{ app.asset_path }}/js/motoboys/motoboy-form-busca.js" type="text/javascript"></script>

{% endblock %}


