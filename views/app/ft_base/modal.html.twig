<div id="{{modal_id|default('ft-modal')}}" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog {{modal_type|default('')}}" role="document">
        <div class="modal-content">
            
            {% block modal_header %}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {% block modal_title %}
                        <h4 class="modal-title">{{modal_title|default('')}}</h4>
                    {% endblock %}
                </div>
            {% endblock %}
            
            {% block modal_body %}
                <div class="modal-body">
                    {% block modal_boy_content %}
                        <p>{{modal_body|default('')}}</p>
                    {% endblock %}
                </div>
            {% endblock %}
            
            {% block modal_footer %}
                <div class="modal-footer">
                    {% block modal_footer_content %}

                    {% endblock %}
                </div>
            {% endblock %}
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
