{% extends 'admin/ft_base/backend.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block container %}
    <div class="right_col" role="main">
        <div class="">
            <div class="row top_tiles">
                <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa fa-motorcycle"></i></div>
                        <div class="count">{{ informacoes.total_veiculos }}</div>
                        <h3>Veiculos Cadastrados</h3>
                        <p>Total de veiculos cadastrados</p>
                    </div>
                </div>
                <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-6">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa fa-briefcase"></i></div>
                        <div class="count">{{ informacoes.total_empresas }}</div>
                        <h3>Empresas</h3>
                        <p>Total de empresas cadastradas.</p>
                    </div>
                </div>
                <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-6">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa  fa-users"></i></div>
                        <div class="count">{{ informacoes.total_moto_boy}}</div>
                        <h3>Moto-Boys</h3>
                        <p>Total de moto boys cadastrados.</p>
                    </div>
                </div>
                <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa fa-user"></i></div>
                        <div class="count">{{ informacoes.total_usuarios}}</div>
                        <h3>USUÁRIOS</h3>
                        <p>Total de usuários cadastrados.</p>
                    </div>
                </div>
            </div>


            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Solicitações de veículos</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table id="table_livros" class="table table-striped ">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Empresa</th>
                                    <th>Descrição</th>
                                    <th>Placa</th>
                                    <th>Cor</th>
                                    <th>Fabricante</th>
                                    <th>Modelo</th>
                                    <th>Data Solicitação</th>
                                    <th>Ações</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for veiculo in veiculos %}
                                    <tr>
                                        <td>{{ veiculo.id }}</td>
                                        <td>{{ veiculo.empresa.nome }}</td>
                                        <td>{{ veiculo.descricao }}</td>
                                        <td>{{ veiculo.placa  }}</td>
                                        <td>{{ veiculo.cor }}</td>
                                        <td>{{ veiculo.fabricante }}</td>
                                        <td>{{ veiculo.modelo }}</td>
                                        <td>{{ veiculo.verificacao.data_solicitacao }}</td>
                                        <td>
                                            <i data-id-veiculo="{{ veiculo.id }}" class="btn btn-sm btn-success fa fa-check-circle autorizar"></i>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script src="{{ app.asset_path }}/js/veiculo_autorizacao/veiculo-autorizacao-modulo.js" type="text/javascript"></script>
    <script src="{{ app.asset_path }}/js/veiculo_autorizacao/veiculo-autorizacao.js" type="text/javascript"></script>
{% endblock %}


