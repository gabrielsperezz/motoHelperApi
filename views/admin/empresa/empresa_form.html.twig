{% extends 'admin/ft_base/backend.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block container %}
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Empresas</h3>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Cadastro de empresas</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <form id="form_empresa" class="form-horizontal form-label-left" novalidate>
                                <span class="section">Dados básicos</span>
                                <input type="hidden" id="id_empresa" name="id_empresa" value="{{ empresa.id|default('0')}}">

                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="titulo">Nome</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="emp_nome" class="form-control col-md-7 col-xs-12" value="{{ empresa.nome|default('') }}" data-validate-length-range="6" data-validate-words="2" name="name" placeholder="Nome" required="required" type="text">
                                    </div>
                                </div>

                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="titulo">Razão Social</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="emp_razao_social" class="form-control col-md-7 col-xs-12" value="{{ empresa.razao_social|default('') }}" data-validate-length-range="6" data-validate-words="2" name="name" placeholder="Razão Social" required="required" type="text">
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="titulo">Documento</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="emp_documento" class="form-control col-md-7 col-xs-12" value="{{ empresa.documento|default('') }}" data-validate-length-range="6" data-validate-words="2" name="name" placeholder="Documento" required="required" type="text">
                                    </div>
                                </div>

                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="editora">Email</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="emp_email" name="editora" required="required" value="{{ empresa.email|default('') }}" placeholder="Email" class="form-control col-md-7 col-xs-12">
                                    </div>
                                </div>

                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-md-offset-3">
                                        <button id="salvar" type="submit" class="btn btn-success">Salvar</button>
                                        <button id="cancelar" class="btn btn-primary">Cancelar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ app.asset_path }}/js/empresas/empresa-modulo.js" type="text/javascript"></script>
    <script src="{{ app.asset_path }}/js/empresas/empresa-view.js" type="text/javascript"></script>
    <script src="{{ app.asset_path }}/js/empresas/empresa.js" type="text/javascript"></script>

{% endblock %}


